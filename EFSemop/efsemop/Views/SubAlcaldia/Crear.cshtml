                @Html.ValidationMessageFor(model => model.Direccion, "Direccion es un dato requerido.", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Zona, htmlAttributes: new { @class = "control-label col-md-2" })
